<% layout('./layouts/boilerplate') -%>
<div class="row mt-4">
    <div class="col-8 offset-3">
        <h1><%= listing.title %></h1>
    </div>
    <div class="card col-6 offset-3 listings-card mb-4">
        <% 
            let imageSrc = 'https://images.unsplash.com/photo-1625505826533-5c80aca7d157?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fGdvYXxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60';
            if (listing.image) {
                if (typeof listing.image === 'string') {
                    imageSrc = listing.image; // Old format: direct URL string
                } else if (listing.image.url) {
                    imageSrc = listing.image.url; // New format: Cloudinary object
                }
            }
        %>
        <img src="<%= imageSrc %>" class="card-img-top"  style ="height: 30vh;" alt="<%= listing.title %>">
        <div class="card-body">
            <div class="show-heading">
                <span class="card-text"><b><i>@<%= listing.owner.username %></i></b></span>
                <span class="card-text">Category: <%= listing.category %></span>
            </div>
            
            <br/>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">
                &#8377;<%= listing.price.toLocaleString("en-IN") %>
            </p>
            <p class="card-text">
                <%= listing.location %>
            </p>
            <p class="card-text">
                <%= listing.country %>
            </p>
            <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="show-btns mb-4">
                <form action="/listings/<%= listing._id %>/edit" method="GET">
                    <button type="submit" class="btn edit-btn">Edit</button>
                </form>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-dark">Delete Listing</button>
                </form>
            </div>
            <% } %>
        </div>

        <div class="col-12 text-start">
            <hr/>
            <% if(currUser) { %>
            <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <fieldset class="starability-basic">
                        <legend>Basic star rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />

                        <input type="radio" id="rate1" name="review[rating]" value="1" />
                        <label for="rate1">1 star.</label>

                        <input type="radio" id="rate2" name="review[rating]" value="2" />
                        <label for="rate2">2 stars.</label>

                        <input type="radio" id="rate3" name="review[rating]" value="3" />
                        <label for="rate3">3 stars.</label>

                        <input type="radio" id="rate4" name="review[rating]" value="4" />
                        <label for="rate4">4 stars.</label>

                        <input type="radio" id="rate5" name="review[rating]" value="5" />
                        <label for="rate5">5 stars.</label>

                        <span class="starability-focus-ring"></span>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment:</label>
                    <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
                    <div class="invalid-feedback">
                        Please provide a comment for your review.
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit Review</button>
            </form>
            <hr/>
            <% } %>

            <p class="mb-3"><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) { %>
                <div class="card mb-3 col-5 ms-3">
                    <div class="card-body">
                        <h5 class="card-title mt-3">@<%= review.author.username %></h5>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>">
                            Rated: <%= review.rating %> stars
                        </p>
                        <p class="card-text"><%= review.comment %></p>
                        <% if(currUser && currUser._id.equals(review.author._id)) { %>
                        <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-sm btn-dark">Delete Review</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

